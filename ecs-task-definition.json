{
    "family": "judge0-task-definition",
    "networkMode": "awsvpc",
    "cpu": "1024",
    "memory": "2048",
    "requiresCompatibilities": ["FARGATE"],
    "containerDefinitions": [
      {
        "name": "judge0-api",
        "image": "judge0/judge0:latest",
        "cpu": 256,
        "memory": 512,
        "portMappings": [
          {
            "containerPort": 2358,
            "hostPort": 2358,
            "protocol": "tcp"
          }
        ],
        "essential": true,
        "environment": [
          {
            "name": "DATABASE_URL",
            "value": "postgres://username:test-pass@postgres-db:5432/judge0"
          },
          {
            "name": "REDIS_URL",
            "value": "redis://:test-pass@redis-cache:6379"
          }
        ],
        "mountPoints": [
          {
            "sourceVolume": "judge0-box",
            "containerPath": "/box"
          }
        ]
      },
      {
        "name": "worker",
        "image": "judge0/judge0:latest",
        "cpu": 256,
        "memory": 512,
        "essential": true,
        "command": ["bash", "-c", "chmod -R 777 /box && ./scripts/workers"],
        "mountPoints": [
          {
            "sourceVolume": "judge0-box",
            "containerPath": "/box"
          }
        ]
      },
      {
        "name": "postgres-db",
        "image": "postgres:16.2",
        "cpu": 256,
        "memory": 512,
        "essential": true,
        "environment": [
          {
            "name": "POSTGRES_PASSWORD",
            "value": "test-pass"
          }
        ]
      },
      {
        "name": "redis-cache",
        "image": "redis:7.2.4",
        "cpu": 128,
        "memory": 256,
        "essential": false,
        "command": [
          "bash",
          "-c",
          "docker-entrypoint.sh --appendonly no --requirepass \"$REDIS_PASSWORD\""
        ],
        "environment": [
          {
            "name": "REDIS_PASSWORD",
            "value": "test-pass"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "judge0-box",
        "dockerVolumeConfiguration": {
          "scope": "task",
          "autoprovision": true
        }
      }
    ]
  }
  